id_count = 0;
data.id = 'id'+id_count;
data.parent = "";
document.write('<table class=\"table table-striped table-bordered table-hover\"><tr id=\"'+ data.id +'\"">');
document.write('<th>' + data.label + '</th><th>' + data.amount  + '</th><th>100%</th>');
